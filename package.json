{
    "name": "beru-theme",
    "version": "1.0.2",
    "displayName": "Beru Theme",
    "description": "Um tema escuro minimalista para VSCode - By FullDev Community",
    "homepage": "https://github.com/getberu",
    "publisher": "FullDev",
    "scripts": {
        "build": "node ./scripts/build.js",
        "lint": "node ./scripts/lint.js",
        "package": "vsce package -o ./bin/beru.vsix",
        "vscode:prepublish": "npm run build",
        "vsce-publish": "vsce publish"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/getBeru/beru-theme.git"
    },
    "bugs": {
        "url": "https://github.com/getBeru/beru-theme/issues"
    },
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Themes"
    ],
    "keywords": [
        "theme",
        "dark theme",
        "beru",
        "fulldev"
    ],
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#101010",
        "theme": "dark"
    },
    "contributes": {
        "themes": [
            {
                "label": "Beru",
                "uiTheme": "vs-dark",
                "path": "./theme/beru.json"
            }
        ]
    },
    "devDependencies": {
        "js-yaml": "^3.13.1",
        "prettier": "^1.19.1",
        "tinycolor2": "^1.4.1",
        "vsce": "^1.97.0"
    }
}
